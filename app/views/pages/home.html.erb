  <div class="searchbar mt-5 d-flex justify-content-center">
  <!-- product search field -->
    <div class="product-search">
     <%= text_field_tag :query,
     params[:query],
     class: "form-control form-control-product",
      placeholder: "Find a product"
      %>
    </div>
    <!-- location search field -->
    <div class="location-search">
      <%= form_tag products_path, method: :get do %>
      <%= text_field_tag :location,
      params[:location],
      class: "form-control form-control-location",
        id: "location-search",
        placeholder: "Look for a location"
        %>
      </div>
      <!-- submit search field -->
      <div class="search-button">
        <button><i class="fas fa-search-location"></i></button>
      </div>
      <% end %>
    </div>
  </div>

