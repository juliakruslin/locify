<div class="home_video">
  <%= video_tag "ronaldreiter.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
</div>
  <div class="banner-title">
    <h1>Your marketplace for local products</h1>
    <p>Support local sellers around you and make your shopping behaviour more sustainable</p>
      <%= link_to "Become a seller", new_product_path, class: "btn btn-secondary" %>
  </div>

