<div class="container">
  <div class="first-line d-flex space-between mb-3">
    <div class="title">
      <h3><strong>My Cart</strong></h3>
    </div>

    <div class="delete-cart">
      <%= link_to cart_path, method: :delete, data: { confirm: "Are you sure you want to delete your cart?" } do %>
      <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
  <div class="cart-body space-between">
    <% @cart_items.each do |cart_item|%>
    <div class="cart-item border-bottom" >
      <div class="d-flex align-items-center text-left text-md-center row" id="cart-item-<%=cart_item.id%>">
        <div class="cart-item-img">
          <!-- TODO: link to single product has to be fixed -->
          <!-- TODO: perhaps fix reloading of page with javascript -->
          <%= link_to products_path(@product) do %>
          <%= cl_image_tag cart_item.product.photos.first.key if cart_item.product.photos.attached?%>
          <% end %>
        </div>
        <div class="cart-item-title text-left m-3" style="width: 300px">
          <%= cart_item.product.name %>
        </div>
        <div class="cart-item-info d-flex">
          <div class="cart-item-single-price d-flex align-items-center text-right m-3">
            € <%= cart_item.product.price.round%>
          </div>
          <div class="cart-item-single-price d-flex align-items-center text-right m-3">
            <%= cart_item.product.delivery_options.sample.name%>
          </div>
          <div class="cart-item-complete-amount d-flex align-items-center m-3">
           <div class="cart-item-amount-down m-1 border">
            <%=  link_to decrease_amount_path(cart_item), method: :post, remote: true do %>
            <%= image_tag "icons/arrow_down.svg", alt: "arrowdown", class:"arrow-icon" %>
            <% end %>
          </div>
          <div class="cart-item-amount border">
            <%= cart_item.amount %>
          </div>
          <div class="cart-item-amount-up m-1 border">
            <%=  link_to increase_amount_path(cart_item), method: :post, remote: true do %>
            <%= image_tag "icons/arrow_up.svg", alt: "arrowup", class:"arrow-icon" %>
            <% end %>
          </div>
        </div>
        <div class="cart-item-price d-flex align-items-center text-right m-3">
          € <%= cart_item.price.round%>
        </div>
        <div class="cart-item-delete d-flex align-items-center m-3" id="trash">
          <%= link_to cart_item_path(cart_item), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } do %>
          <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="bottom-line">
  <h6><strong>Total order price: </h6></strong>
  <h6 class="total-price"><strong> <%= humanized_money_with_symbol(@cart.price) %></h6></strong>
</div>
<div class="order-btn">
  <%= form_tag orders_path do %>
  <%= hidden_field_tag 'cart', @cart.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>
</div>
</div>
