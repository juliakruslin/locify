<div class="container col-10 mx-auto">
<h1><strong>Your Cart</strong></h1>
    <% @cart.cart_items.each do |cart_item|%>
<div class="cart-item d-flex justify-content-start">
  <%= cl_image_tag cart_item.product.photos.first.key if cart_item.product.photos.attached? %>
  <div class="cart-item-info">
    <td>
      <%= cart_item.product.name %> <%= cart_item.product.price %>
      <%= simple_form_for cart_item, url: update_amount_path(cart_item), method: :patch do |f| %>
        <%= f.input :amount %>
        <%= f.submit "Send" %>
      <% end %>
      x EUR <%= cart_item.price %>
    </td>
  </div>
</div>
<% end %>
<li><%= @cart.total_price %></li>
</div>


