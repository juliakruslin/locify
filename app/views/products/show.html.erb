<div class="container mt-5">
<div class="product-photos">
<% @product.photos.each do |photo| %>
<%= cl_image_tag photo.key %>
<% end %>
</div>

<div class="product-description">
<h2><strong><%= @product.name %></strong></h2>
<p><strong> Seller: </strong><%= @product.user.first_name %> <%= @product.user.last_name %></p>
<p>EUR <%= @product.price %></p>
<p><%= @product.description %></p>
<i class="fas fa-map-marker-alt"></i> <%= @product.user.street_name %> <%= @product.user.street_number %>, <%= @product.user.city %>
<% raise %>
</div>

<%= link_to "Edit this listing", edit_product_path(@product), class: "btn btn-secondary" %>
<%#= link_to "Delete this listing", product_path(@product), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary" %>

<button id="delete-product" class="btn btn-danger">Delete this listing</button>
<%= link_to "", product_path(@product), method: :delete, id: "delete-link", class: "hidden" %>

</div>
