<!-- <div class="container"> -->
  <div class="big-container">
    <div class="row ml-2">
      <div class="col-8">
        <div id="price-filter">
          <input type="button" class="price-filter" name="answer" value="Filters" onclick="showDiv()" />
          <div id="show-price-filter" style="display:none;">
            <%= form_tag products_path, method: :get do %>
            <%= hidden_field_tag :query, params[:query] %>
            <%= hidden_field_tag :location, params[:location] %>
            <%= hidden_field_tag :category, params[:category] %>

            <% if params[:category].present? %>
            <% category = Category.find_by_name(params[:category]) %>
            <% category.subcategories.each_with_index do |subcategory, index| %>
            <div class="form-check form-check-inline">
              <div class= "align-items-center">
                <%= check_box_tag "subcategories[]", subcategory.id %>
                <%= label_tag subcategory.name %>
              </div>
            <!--   <input class="form-check-input" type="checkbox" id="inlineCheckbox<%= index + 1 %>" value="<%= subcategory.id %>">
              <label class="form-check-label" for="inlineCheckbox1"><%= subcategory.name %></label> -->
            </div>
            <% end %>
            <% end %>






            <div class="searchbar d-flex">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">â‚¬</span>
                </div>
                <input type="number" name="min_price" id="min_price" class="form-control" placeholder="Min">
              </div>
              <div class="input-group mb-3">
                <input type="number" name="max_price" id="max_price" class="form-control" placeholder="Max">
              </div>
              <div>
                <%= button_tag(type: "submit", class: "btn btn-default") do %>
                <i class="fas fa-search"></i>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>




        <div class="product-cards mt-4">
          <h1 class="mb-2"><strong>Our products</strong></h1>
          <% @products.each do |product| %>
          <div class="card-product m-2">
            <%= cl_image_tag product.photos.first.key if product.photos.attached? %>
            <div class="card-product-infos">
              <h2><%= link_to product.name, product_path(product) %></h2>
              <p> EUR <%= product.price %></p>
            </div>
          </div>
          <% end %>
        </div>
      </div>

      <div class="map col-4">
        <div id="map"
        style="width: 100%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>

  <!-- </div> -->


          <script>
            function showDiv() {
             var x = document.getElementById("show-price-filter");
             if (x.style.display === "none") {
              x.style.display = "block";
            } else {
              x.style.display = "none";
            }       }
          </script>
